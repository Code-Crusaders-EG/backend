{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/config": ["libs/backend/config/src/index.ts"],
      "@backend/database": ["libs/backend/database/src/index.ts"],
      "@backend/decorators": ["libs/backend/decorators/src/index.ts"],
      "@backend/dtos/auth": ["libs/backend/dtos/auth/index.ts"],
      "@backend/dtos/resource": ["libs/backend/dtos/resource/index.ts"],
      "@backend/dtos/room": ["libs/backend/dtos/room/index.ts"],
      "@backend/dtos/shared": ["libs/backend/dtos/shared/index.ts"],
      "@backend/dtos/user": ["libs/backend/dtos/user/index.ts"],
      "@backend/filters": ["libs/backend/filters/src/index.ts"],
      "@backend/guards": ["libs/backend/guards/src/index.ts"],
      "@backend/hashing": ["libs/backend/hashing/src/index.ts"],
      "@backend/interceptors": ["libs/backend/interceptors/src/index.ts"],
      "@backend/internal-communications": [
        "libs/backend/internal-communications/src/index.ts"
      ],
      "@backend/jwt": ["libs/backend/jwt/src/index.ts"],
      "@backend/proto": ["libs/backend/proto/gen/index.ts"],
      "@backend/strategies": ["libs/backend/strategies/src/index.ts"],
      "@backend/utilities": ["libs/backend/utilities/src/index.ts"],
      "@core": ["libs/core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
