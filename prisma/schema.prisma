// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  email     String     @unique
  firstName String
  lastName  String
  password  String
  role      String     @default("user")
  avatar    String?
  rooms     RoomUser[]
}

model Model {
  id          String @id @default(uuid())
  name        String
  description String
  rooms       Room[]
}

model Room {
  id    String     @id @default(uuid())
  model Model      @relation(fields: [id], references: [id])
  users RoomUser[]
}

model Resource {
  id      String @id @default(uuid())
  roomId  Int
  userId  Int
  content String
}

model Message {
  id        String   @id @default(uuid())
  roomId    Int
  userId    Int
  content   String
  timestamp DateTime @default(now())
}

model RoomUser {
  id     String @id @default(uuid())
  userId String
  roomId String
  User   User   @relation(fields: [userId], references: [id])
  Room   Room   @relation(fields: [roomId], references: [id])
}
