generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PRISMA_AUTH")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  role      String   @default("user")
  avatar    String
  rooms     String[]

  @@map("users")
}

