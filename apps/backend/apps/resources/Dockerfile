# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build resources`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t resources`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system resources && \
          adduser --system -G resources resources

COPY dist/apps/backend/apps/resources resources
RUN chown -R resources:resources .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix resources --omit=dev -f install

CMD [ "node", "resources" ]
