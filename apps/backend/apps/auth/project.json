{
  "name": "auth",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/apps/auth/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker-compose up users-database -d",
          "pnpm run prisma:migrate:dev",
          "pnpm run prisma:generate",
          "pnpm run proto:build:backend"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "auth:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "auth:build:development"
        },
        "production": {
          "buildTarget": "auth:build:production"
        }
      },
      "dependsOn": [
        "prepare"
      ]
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend/apps/auth",
        "main": "apps/backend/apps/auth/src/main.ts",
        "tsConfig": "apps/backend/apps/auth/tsconfig.app.json",
        "assets": ["apps/backend/apps/auth/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/backend/apps/auth/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/apps/auth/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend/apps/auth/jest.config.ts"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/backend/apps/auth/Dockerfile . -t auth"
    }
  },
  "tags": []
}
